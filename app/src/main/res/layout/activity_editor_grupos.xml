<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editor_grupos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.icesi.innlab.cacaoapp.configurador.EditorGrupos">



    <TextView
        android:text="EdiciÃ³n de Equipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_editor_grupos_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edt_editor_grupos_nombre_equipos"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/edt_editor_grupos_ncacaos"
        android:hint="# Cacaos" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:id="@+id/edt_editor_grupos_npuntos"
        android:hint="# Puntos"
        android:layout_below="@+id/edt_editor_grupos_ncacaos"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_editor_grupos_npuntos"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:id="@+id/btn_editor_grupos_editar" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_editor_grupos_nombre"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/tv_editor_grupos_titulo"
        android:layout_alignParentStart="true"
        android:hint="seleccione el grupo"
        />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edt_editor_grupos_nombre_equipos"
        android:hint="nombre"
        android:layout_below="@+id/spinner_editor_grupos_nombre"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />


</RelativeLayout>
