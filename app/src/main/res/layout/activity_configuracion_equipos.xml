<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_configuracion_equipos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.icesi.innlab.cacaoapp.configurador.CreadorDeEquiposActivity">

    <TextView
        android:text="CreaciÃ³n de equipos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_config_equipos_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/tv_config_equipos_titulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/edt_crea_equipo_nombre_equipos"
        android:hint="nombre" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_below="@+id/edt_crea_equipo_nombre_equipos"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/edt_crea_equipo_s_ncacaos"
        android:hint="# Cacaos" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:layout_marginTop="50dp"
        android:id="@+id/edt_crea_equipo_npuntos"
        android:hint="# Puntos"
        android:layout_below="@+id/edt_crea_equipo_s_ncacaos"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Crear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:id="@+id/btn_crea_equipo_crear"
        android:layout_below="@+id/edt_crea_equipo_npuntos"
        android:layout_centerHorizontal="true" />



</RelativeLayout>
