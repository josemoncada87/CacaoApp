<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp">

        <TextView
            android:text="Actividad grupal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_grupo_inventario"

            android:layout_below="@+id/tv_frag_grupo_nombre"
            android:layout_alignParentStart="true"
            android:layout_marginTop="13dp" />

        <TextView
            android:text="Actividad Sorpresa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_grupo_nombre"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Cacaos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_grupo_premioCacao_titulo"
            android:layout_below="@+id/tv_frag_grupo_inventario"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_frag_grupo_inventario"
            android:layout_toEndOf="@+id/tv_frag_grupo_premioCacao_titulo"
            android:id="@+id/tv_frag_reto_premioCacao_cantidad"
            android:textColor="@color/colorAccentCacao" />

        <TextView
            android:text="Puntos:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_reto_premioPuntos_titulo"
            android:layout_below="@+id/tv_frag_grupo_premioCacao_titulo"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_frag_reto_premioCacao_cantidad"
            android:layout_toEndOf="@+id/tv_frag_grupo_premioCacao_titulo"
            android:id="@+id/tv_frag_reto_premioPuntos_cantidad"
            android:textColor="@color/colorAccentCacao" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imgv_frag_reto_imagen"
            android:layout_marginEnd="13dp"
            android:layout_alignTop="@+id/tv_frag_grupo_inventario"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Identificador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_frag_reto_identificador"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>

</android.support.v7.widget.CardView>

