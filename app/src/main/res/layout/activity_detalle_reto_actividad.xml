<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detalle_reto_actividad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="co.edu.icesi.innlab.cacaoapp.activities.DetalleRetoActividad">

    <TextView
        android:text="Descripción del Reto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_detalle_reto_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Nombre del Reto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_detalle_reto_titulo"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:id="@+id/tv_detalle_reto_nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent" />

    <TextView
        android:text="Descripción corta del Reto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detalle_reto_desc_corta"
        android:layout_below="@+id/tv_detalle_reto_titulo_cacaos"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp"
        android:textColor="@color/colorPrimaryDark" />

    <TextView
        android:text="Premio en cacaos: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_detalle_reto_titulo_cacaos"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/tv_detalle_reto_nombre"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tv_detalle_reto_titulo_cacaos"
        android:layout_toEndOf="@+id/tv_detalle_reto_titulo_cacaos"
        android:id="@+id/tv_detalle_reto_cant_cacaos" />

    <TextView
        android:text="Premio en puntos: "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_detalle_reto_titulo_cacaos"
        android:layout_alignParentStart="true"
        android:id="@+id/tv_detalle_reto_titulo_puntos" />

    <TextView
        android:text="50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_detalle_reto_titulo_puntos"
        android:layout_toEndOf="@+id/tv_detalle_reto_titulo_puntos"
        android:id="@+id/tv_detalle_reto_cant_puntos" />

    <TextView
        android:text="Descripción completa del reto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/tv_detalle_reto_desc_completa"
        android:layout_below="@+id/tv_detalle_reto_desc_corta"
        android:layout_alignParentStart="true" />

    <Button
        android:text="OK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_detalle_reto_ok"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Title"
        style="@style/Widget.AppCompat.Button.Colored" />
</RelativeLayout>
